// Collection using memory-mapped files
// Uses OS virtual memory to handle datasets efficiently
// 
// Architecture:
// - Vectors stored in mmap file (binary format)
// - Index maps UUID -> file offset
// - OS handles paging (loads only what's needed)
//
// This module now uses a modular structure:
// - collection/mod.rs: Module organization
// - collection/storage.rs: Core data structure
// - collection/builder.rs: Initialization and recovery
// - collection/operations.rs: CRUD operations
// - collection/search.rs: Search operations
// - collection/persistence.rs: Disk operations

mod collection;

use uuid::Uuid;
use crate::error::Result;
use crate::metadata::Metadata;
use crate::metrics::Metric;
use crate::search::Hit;
use super::document::Document;
use super::metadata::CollectionMetadata;

pub use collection::{Collection, CollectionBuilder};

// Public API implementation using modular structure
impl Collection {
    pub fn open(path: &str) -> Result<Self> {
        CollectionBuilder::open(path)
    }

    pub fn with_config(path: &str, config: crate::config::CollectionConfig) -> Result<Self> {
        CollectionBuilder::with_config(path, config)
    }

    pub fn get(&self, id: &Uuid) -> Option<Document> {
        collection::operations::get(self, id)
    }

    pub fn insert(&mut self, entry: Document) -> Result<Uuid> {
        collection::operations::insert(self, entry)
    }
    
    pub fn upsert(&mut self, entry: Document) -> Result<Uuid> {
        collection::operations::upsert(self, entry)
    }

    pub fn insert_batch(&mut self, entries: Vec<Document>) -> Result<Vec<Uuid>> {
        collection::operations::insert_batch(self, entries)
    }

    pub fn delete(&mut self, id: &Uuid) -> Result<bool> {
        collection::operations::delete(self, id)
    }
    
    pub fn delete_batch(&mut self, ids: &[Uuid]) -> Result<usize> {
        collection::operations::delete_batch(self, ids)
    }
    
    pub fn update_metadata(&mut self, id: &Uuid, metadata: Metadata) -> Result<bool> {
        collection::operations::update_metadata(self, id, metadata)
    }
    
    pub fn update_vector(&mut self, id: &Uuid, vector: Vec<f32>) -> Result<bool> {
        collection::operations::update_vector(self, id, vector)
    }

    pub fn search(&self, query: &[f32], k: usize, metric: Metric) -> Vec<Hit> {
        collection::search::search(self, query, k, metric)
    }

    pub fn search_with_mode(&self, query: &[f32], k: usize, metric: Metric, mode: crate::config::ExecutionMode) -> Vec<Hit> {
        collection::search::search_with_mode(self, query, k, metric, mode)
    }

    pub fn search_batch(&self, queries: &[Vec<f32>], k: usize, metric: Metric) -> Vec<Vec<Hit>> {
        collection::search::search_batch(self, queries, k, metric)
    }

    pub fn search_with_filter(
        &self,
        query: &[f32],
        k: usize,
        metric: Metric,
        filter: Option<&crate::search::query::Filter>,
    ) -> Vec<Hit> {
        collection::search::search_with_filter(self, query, k, metric, filter)
    }

    pub fn get_vectors(&self) -> std::collections::HashMap<Uuid, Vec<f32>> {
        collection::operations::get_vectors(self)
    }

    pub fn checkpoint(&mut self) -> Result<()> {
        collection::persistence::checkpoint(self)
    }

    pub fn flush(&mut self) -> Result<()> {
        collection::persistence::flush(self)
    }
}

